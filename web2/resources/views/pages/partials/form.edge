  <label for="intro">{{ antl.formatMessage('main.intro') }}</label>
  <input class="form-control {{ hasErrorFor('intro') ? 'is-invalid': '' }}"
    id="intro" type="text" name="intro" placeholder="" value="{{ old('intro', page.intro || '') }}" autofocus>
