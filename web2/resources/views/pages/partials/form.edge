<div class="form-group">
  <div class="form-check">
    <input class="form-check-input" id="visible" type="checkbox" name="visible" placeholder="" {{ old('visible', page.visible || page===undefined) ? ' checked' : '' }} autofocus>
    <label class="form-check-label" for="visible">{{ antl.formatMessage('main.visible') }}</label>
  </div>
</div>

<div class="form-group">
  <label for="description">{{ antl.formatMessage('main.description') }}</label>
  <textarea class="form-control {{ hasErrorFor('description') ? 'is-invalid': '' }}"
    id="description" name="description" rows="30">{{ old('description', page.description || '') }}</textarea>
  <div class="invalid-feedback">{{ getErrorFor('description') }}</div>
</div>
