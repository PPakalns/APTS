{% extends 'master' %}

{% block header %}{% endblock %}

{% block content %}
  <div class="panel panel-default">
    <div class="panel-heading">Ieiet</div>
    <div class="panel-body">
      {{ form.open({ action: 'AuthController.login', class:"form-horizontal"}) }}

        {{ csrfField }}

        <div class="form-group">
          {{ form.label('email', 'Epasta adrese', {class: 'col-md-4 control-label'}) }}
          <div class="col-md-6">
            {{ form.email('email', null, {class: 'form-control'}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form.label('password', 'Parole', {class: 'col-md-4 control-label'}) }}
          <div class="col-md-6">
            {{ form.password('password', null, {class: 'form-control', withOld: false}) }}
          </div>
        </div>

        {% if old('need_recaptcha') %}
          <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
              {{ reCAPTCHA() | safe }}
            </div>
          </div>
        {% endif %}

        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            {{ form.button('Ieiet', 'Ieiet', {class: "btn btn-primary"}) }}
          </div>
        </div>
      {{ form.close() }}
        <div class="form-group">
          <div class="col-md-8 col-md-offset-4">
            <a href="{{ 'RegisterController.resend_password' | action({}) }}">Aizmirsi paroli?</a>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 col-md-offset-4">
            Nesaņēmāt reģistrācijas epastu: <a href="{{ 'RegisterController.resend_registration' | action({}) }}">Izsūtiet reģistrācijas epastu atkārtoti.</a>
          </div>
        </div>
    </div>
  </div>
{% endblock %}
