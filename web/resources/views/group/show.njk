{% extends 'master' %}

{% block header %}
  <h1>{{ antl.formatMessage('messages.group') }}</h1>
  <p>{{ antl.formatMessage('messages.groups_description') }}</p>
{% endblock %}

{% block content %}
  <h2>
    {{ group.name }}
  </h2>
  <hr>
  <div class="tex2jax_process prettycontent">
    {{ group.description | markdown | safe }}
  </div>
{% endblock %}

{% block sidebar %}
  {% include 'group/admin_sidebar' %}

  {% set Assignment = use('App/Model/Assignment') %}
  {% yield assignmentstmp = Assignment.query().visible().with('problem').where('group_id', group.id).fetch() %}
  {% yield assignments = assignmentstmp.toJSON() %}

  <table class="table">
    <thead>
      <tr>
        <th>
          <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span> {{ antl.formatMessage('messages.group_tasks') }}
        </th>
      </tr>
    </thead>
    <tbody>
      {% if assignments.length == 0 %}
        <tr>
          <td class="nocontent">
            {{ antl.formatMessage('messages.group_do_not_have_tasks') }}
          </td>
        </tr>
      {% else %}
        {% for assignment in assignments %}
          <tr>
            <td>
              <a href="{{ 'assignment/show' | route({id: assignment.id }) }}">
                {{ assignment.problem.name }}
              </a>
            </td>
          </tr>
        {% endfor %}
      {% endif %}
    </tbody>
  </table>

  <table class="table">
    <thead>
      <tr>
        <th>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          {{ antl.formatMessage('messages.participants', {count: participantCount }) }}
        </th>
      </tr>
    </thead>
  </table>
{% endblock %}
