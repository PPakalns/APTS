{% extends 'master' %}

{% block header %}{% endblock %}

{% block content %}
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-3 text-right">EPasts:</div>
        <div class="col-xs-7">{{ user.email }}</div>
      </div>
      {% if user.student_id %}
      <div class="row">
        <div class="col-xs-3 text-right">Studenta apl. nr.:</div>
        <div class="col-xs-7">{{ user.student_id }}</div>
      </div>
      {% endif %}
      <div class="row">
        <div class="col-xs-3 text-right">Iesūtījumi:</div>
        <div class="col-xs-7">{{ data.submissions }}</div>
      </div>
      <div class="row">
        <div class="col-xs-3 text-right">Reģistrēts:</div>
        <div class="col-xs-7">{{ user.created_at }}</div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      Nomainīt paroli
    </div>
    <div class="panel-body">
      {{ form.open({ action: 'UserController.change_password', params: {user_id: user.id}, class:"form-horizontal"}) }}

        {{ csrfField }}

        <div class="form-group">
          {{ form.label('old_pass', 'Pašreizējā parole:', {class: 'col-md-4 control-label'}) }}
          <div class="col-md-6">
            {{ form.password('old_pass', null, {class: 'form-control'}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form.label('pass', 'Jaunā parole:', {class: 'col-md-4 control-label'}) }}
          <div class="col-md-6">
            {{ form.password('pass', null, {class: 'form-control'}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form.label('pass_confirm', 'Jaunā parole atkārtoti:', {class: 'col-md-4 control-label'}) }}
          <div class="col-md-6">
            {{ form.password('pass_confirm', null, {class: 'form-control'}) }}
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            {{ reCAPTCHA() | safe }}
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            {{ form.button('Nomainīt paroli', 'Nomainīt paroli', {class: "btn btn-primary"}) }}
          </div>
        </div>
      {{ form.close() }}
    </div>
  </div>
{% endblock %}
