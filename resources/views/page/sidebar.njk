{% if page and cUser.admin %}
  <div class="list-group">
    <a href="{{ 'PageController.index' | action({}) }}" class="list-group-item list-group-item-warning">
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Lapu pārvaldība
    </a>
    <a href="{{ 'PageController.show' | action({id: page.path}) }}" class="list-group-item list-group-item-success">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{page.name}}
    </a>
    <a href="{{ 'PageController.edit' | action({id: page.id }) }}" class="list-group-item">
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Rediģēt
    </a>
    <form method="post" action="{{ 'PageController.destroy' | action({id: page.id}) }}">
      {{ csrfField }}
      <button type="submit" class="list-group-item">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Dzēst
      </button>
    </form>
  </div>
{% endif %}
