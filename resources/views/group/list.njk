{% extends 'master' %}

{% block header %}
  <h1>Grupas</h1>
  <p>Grupās tās dalībniekiem ir pieeja programmēšanas uzdevumiem</p>
{% endblock %}

{% block content %}

  {% for group in groups %}
    <div class="panel panel-default">
      <div class="panel-heading">
        {{ linkTo('group/show', group.name, {id: group.id}) }}
      </div>
      <div class="panel-body">
        {{ group.description }}
      </div>
    </div>
  {% endfor %}

{% endblock %}
