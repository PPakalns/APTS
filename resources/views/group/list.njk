{% extends 'master' %}

{% block header %}
  <h1>Grupas</h1>
  <p>Grupās tās dalībniekiem ir pieeja programmēšanas uzdevumiem</p>
{% endblock %}

{% block content %}

  <table class="table">
    <thead>
      <tr>
        <th>#</td>
        <th>Nosaukums</td>
      </tr>
    </thead>
    <tbody>
      {% set i=0 %}
      {% for group in groups %}
        <tr>
          <td>
            {% set i=i+1 %}
            {{ i }}
          </td>
          <td>
            {{ linkTo('group/show', group.name, {id: group.id}) }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
