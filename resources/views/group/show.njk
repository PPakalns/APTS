{% extends 'master' %}

{% block header %}
  <h1>Grupas</h1>
  <p>Grupās tās dalībniekiem ir pieeja programmēšanas uzdevumiem</p>
{% endblock %}

{% block content %}
  <p class="text-right editmenu">
    <a href="{{ 'group/users' | route({id: group.id }) }}">
       <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Dalībnieki
    </a>
    <a href="{{ 'group/edit' | route({id: group.id }) }}">
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Rediģēt
    </a>
  </p>
  <h2>
    {{ group.name }}
  </h2>
  <hr>
  <div class="tex2jax_process">
    {{ group.description | markdown | safe }}
  </div>
{% endblock %}
