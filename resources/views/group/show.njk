{% extends 'master' %}

{% block header %}
  <h1>Grupas</h1>
  <p>Grupās tās dalībniekiem ir pieeja programmēšanas uzdevumiem</p>
{% endblock %}

{% block content %}
  <h2>
    {{ group.name }}
  </h2>
  <hr>
  <div class="tex2jax_process">
    {{ group.description | markdown | safe }}
  </div>
{% endblock %}

{% block sidebar %}
  <div class="list-group">
    <a href="{{ 'group/show' | route({id: group.id}) }}" class="list-group-item active">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{group.name}}
    </a>
  </div>

  <div class="list-group">
    <a href="{{ 'group/users' | route({id: group.id }) }}" class="list-group-item">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Pārvaldīt dalībniekus
    </a>
    <a href="{{ 'group/edit' | route({id: group.id }) }}" class="list-group-item">
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Rediģēt
    </a>
    <a href="{{ 'group/assignment' | route({group_id: group.id }) }}" class="list-group-item">
      <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span> Pārvaldīt grupas uzdevumus
    </a>
  </div>

  {% set Assignment = use('App/Model/Assignment') %}
  {% yield assignmentstmp = Assignment.query().visible().with('problem').where('group_id', group.id).fetch() %}
  {% yield assignments = assignmentstmp.toJSON() %}

  <table class="table">
    <thead>
      <tr>
        <th>
          <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span> Grupas uzdevumi
        </th>
      </tr>
    </thead>
    <tbody>
      {% if assignments.length == 0 %}
        <tr>
          <td class="nocontent">
            Grupai nav pievienots neviens uzdevums
          </td>
        </tr>
      {% else %}
        {% for assignment in assignments %}
          <tr>
            <td>
              <a href="{{ 'assignment/show' | route({id: assignment.id }) }}">
                {{ assignment.problem.name }}
              </a>
            </td>
          </tr>
        {% endfor %}
      {% endif %}
    </tbody>
  </table>

  <table class="table">
    <thead>
      <tr>
        <th>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Dalībnieki grupā: {{ participantCount }}
        </th>
      </tr>
    </thead>
  </table>
{% endblock %}
