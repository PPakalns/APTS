{% extends 'master' %}

{% block header %}
  <h1>Grupas</h1>
  <p>Grupās tās dalībniekiem ir pieeja programmēšanas uzdevumiem</p>
{% endblock %}

{% block content %}
  <p class="text-right editmenu">
    <a href="{{ 'group/users' | route({id: group.id }) }}">
       <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Dalībnieki
    </a>
    <a href="{{ 'group/edit' | route({id: group.id }) }}">
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Rediģēt
    </a>
  </p>
  <h2>
    {{ group.name }}
  </h2>
  <hr>
  <div class="tex2jax_process">
    {{ group.description | markdown | safe }}
  </div>
{% endblock %}

{% block sidebar %}
  {% set Assignment = use('App/Model/Assignment') %}
  {% yield assignmentstmp = Assignment.query().visible().with('problem').where('group_id', group.id).fetch() %}
  {% yield assignments = assignmentstmp.toJSON() %}

  <p class="text-right editmenu">
    <a href="{{ 'group/assignment' | route({group_id: group.id }) }}">
      <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span> Pārvaldīt grupas uzdevumus
    </a>
  </p>
  <table class="table">
    <tr>
      <th>
        Grupas uzdevumi
      </th>
    </tr>
    {% if assignments.length == 0 %}
      <tr>
        <td class="nocontent">
          Grupai nav pievienots neviens uzdevums
        </td>
      </tr>
    {% else %}
      {% for assignment in assignments %}
        <tr>
          <td>
            {{ assignment.problem.name }}
          </td>
        </tr>
      {% endfor %}
    {% endif %}
    <tr>
      <th>
        Dalībnieki grupā: {{ participantCount }}
      </th>
    </tr>
  </table>
{% endblock %}
