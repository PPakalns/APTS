{% extends 'master' %}

{% block header %}
  <h1>Programmēšanas uzdevumi</h1>
  <pre><code class="python">if not Happy(): beHappy()</code></pre>
{% endblock %}

{% block content %}

  <p class="text-right editmenu">
    <a href="{{ 'problem/create' | route({}) }}">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Izveidot uzdevumu
    </a>
  </p>
  {% if problems.length == 0 %}
    <p class="bg-info">
      Diemžēl nav pievienots neviens uzdevums.
    </p>
  {% else %}
    <table class="table">
      <thead>
        <tr>
          <th>#</td>
          <th>Nosaukums</td>
        </tr>
      </thead>
      <tbody>
        {% set i=0 %}
        {% for problem in problems %}
          <tr>
            <td>
              {% set i=i+1 %}
              {{ i }}
            </td>
            <td>
              {{ problem.name }}
              {# {{ linkTo('group/show', group.name, {id: group.id}) }} #}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}

{% endblock %}
